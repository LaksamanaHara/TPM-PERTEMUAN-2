<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#F24463"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_functions_black_24dp"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="31sp"
            android:text="KALKULATOR"/>

    </LinearLayout>

    <Button
        android:background="#F7F8F3"
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:text="MENGHITUNG BANGUN DUA DIMENSI"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"/>
    <Button
        android:background="#F7F8F3"
        android:id="@+id/btnjajargenjang"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="JAJARGENJANG"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="110dp"/>

    <Button
        android:background="#F7F8F3"
        android:id="@+id/btnsegitiga"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="SEGITIGA"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="110dp"/>

</RelativeLayout>

</LinearLayout>